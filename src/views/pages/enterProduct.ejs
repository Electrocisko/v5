<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head.ejs', {headtitle:'Ecommerce Enter Product'})
    %>
  </head>
  <body class="container">
    <header><%- include('../partials/navbar.ejs') %></header>
    <main>
      <h1>Ingrese su producto</h1>
      <div class="container">
        <form id="productForm">
          <label class="form-label">Producto</label>
          <input id="name" name="name" class="form-control" />

          <label class="form-label">Descripcion</label>
          <input id="description" name="description" class="form-control" />

          <label for="category">Categoria:</label>
          <select class="form-select" name="category" id="category">
            <option value="adornos">Adornos</option>
            <option value="azulejos">Azulejos</option>
            <option value="vajillas">Vajillas</option>
            <option value="otros">Otros</option>
          </select>

          <label class="form-label">Codigo</label>
          <input id="code" name="code" class="form-control" />

          <label class="form-label">Precio</label>
          <input id="price" name="price" class="form-control" />

          <label class="form-label">Stock</label>
          <input id="stock" name="stock" class="form-control" />

          <br />
          <input
            id="thumbnail"
            type="file"
            name="thumbnail"
            class="form-control"
          />
          <br />
          <a href="/menu" style="text-decoration: none">
            <input
              type=" button"
              class="btn btn-dark btn-sm"
              value="Volver a Productos"
            />
          </a>
          <input type="submit" class="btn btn-primary btn-sm" />
        </form>
        <br />
      </div>
    </main>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <script src="js/enterProduct.js"></script>
  </body>
</html>
